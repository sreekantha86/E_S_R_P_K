@model ems.domain.Customer
<div class="box-body">
    <div class="form-group">
        @Html.LabelFor(m => m.CusCode)
        <div class="row">
            <div class="col-xs-3">
                @Html.TextBoxFor(model => model.CusCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CusCode)
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CusName)
        <div class="row">
            <div class="col-xs-3">
                @Html.TextBoxFor(model => model.CusName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CusName)
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ContactPerson)
        <div class="row">
            <div class="col-xs-3">
                @Html.TextBoxFor(model => model.ContactPerson, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ContactPerson)
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Phone)
        <div class="row">
            <div class="col-xs-3">
                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Fax)
        <div class="row">
            <div class="col-xs-3">
                @Html.TextBoxFor(model => model.Fax, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Fax)
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        <div class="row">
            <div class="col-xs-3">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address)
        @Html.TextAreaFor(model => model.Address, new { @class = "form-control", @rows = "3" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GSTNo)
        <div class="row">
            <div class="col-xs-3">
                @Html.TextBoxFor(model => model.GSTNo, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GSTNo)
            </div>
        </div>
    </div>
</div>
